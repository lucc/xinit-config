! The .Xresources file by luc {{{1
! vim: filetype=xdefaults foldmethod=marker

! define some preprocessor constants for conditions in the file {{{1
! the values have no actual meaning but are only used in conditions
#define SOLARIZED        1
#define LIGHT            2
#define DARK             3
#define XTERM            4
#define URXVT            5

! define some constants for the preprocessor (can be changed to taste) {{{1
#define THEME     SOLARIZED
#define TONE      DARK
#define TERM      URXVT
! some alternatives
!#define FONT         Terminus:style=Regular:size=16
!#define FONT         Terminus:style=Regular:size=9
!#define FONT         deja vu sans mono:size=9
#define FONT         deja vu sans mono for powerline:size=9
!#define FONT         menlo:size=11
!#define FONT         Menlo for Powerline:size=10
!#define FONT         Meslo LG S:size=9
!#define FONT         Ubuntu Mono derivative Powerline:size=11
!#define FONT         Meslo LG S for Powerline:size=9
!#define FONT         Ubuntu Mono derivative Powerline:size=11
!#define FONT         Ubuntu Mono derivative Powerline:size=10
!#define ITALIC_FONT      Ubuntu Mono derivative Powerline:italic:size=11

! set some preprocessor constants automatically {{{1
#if TERM == XTERM
#  define TERM_NAME xterm
#elif TERM == URXVT
#  define TERM_NAME URxvt
#endif

! general font settings {{{1
! copied from http://crunchbang.org/forums/viewtopic.php?pid=196047#p196047
Xft.autohint: 0
Xft.antialias: 1
Xft.hinting: false
!Xft.hintstyle: hintslight
Xft.dpi: 96
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

