! The .Xresources file by luc {{{1
! vim: filetype=xdefaults foldmethod=marker

! include the constants for conditions
#include "Xresources.d/constants"
! include the font macros
#include "Xresources.d/fonts"
#define FONT FONT_MENLO_PL

! define some constants for the preprocessor (can be changed to taste) {{{1
#define THEME     SOLARIZED
#define TONE      DARK
#define CONTRAST  LOW
#define TERM      XTERM

! include some aoutomaticcaly set macros
#include "Xresources.d/auto"

! general font settings {{{1
*font:                     FONT_TERMINUS
! copied from http://crunchbang.org/forums/viewtopic.php?pid=196047#p196047
Xft.autohint: 0
Xft.antialias: 1
Xft.hinting: false
!Xft.hintstyle: hintslight
!Xft.hintstyle: hintfull
Xft.dpi: 96
Xft.rgba: rgb
Xft.lcdfilter: lcddefault

