! general font settings
*font:                     FONT_TERMINUS
#include "Xresources.d/xft"

! color selection
#if THEME == SOLARIZED
#  include "Xresources.d/color/solarized"
#elif THEME == LUCIUS
#  include "Xresources.d/color/lucius"
#elif THEME == ZENBURN
#  include "Xresources.d/color/zenburn"
#endif

#include "Xresources.d/color/terminals"
