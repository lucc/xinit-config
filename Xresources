! terminal selection {{{1
#if TERM == XTERM
xterm*faceName:          FONT
xterm*scrollKey:         true
xterm*scrollTtyOutput:   false
! old xdefaults file
!XTerm.fullscreen: true
!XTerm*faceName: Menlo
!XTerm*faceSize: 11
#elif TERM == URXVT
URxvt.scrollstyle:       plain
URxvt*scrollTtyOutput:   false
